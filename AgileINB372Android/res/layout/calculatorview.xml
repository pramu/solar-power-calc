<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TabHost
        android1:id="@android:id/tabhost"
        android1:layout_width="match_parent"
        android1:layout_height="match_parent" >

        <LinearLayout
            android1:layout_width="match_parent"
            android1:layout_height="match_parent"
            android1:orientation="vertical" >

            <TabWidget
                android1:id="@android:id/tabs"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content" >
            </TabWidget>

            <FrameLayout
                android1:id="@android:id/tabcontent"
                android1:layout_width="match_parent"
                android1:layout_height="match_parent" >

                <LinearLayout
                    android1:id="@+id/tab1"
                    android1:layout_width="match_parent"
                    android1:layout_height="match_parent" >

                    <LinearLayout
                        android1:id="@+id/linearLayout1"
                        android1:layout_width="wrap_content"
                        android1:layout_height="wrap_content"
                        android1:layout_marginTop="23dp"
                        android1:orientation="vertical" >

                        <TextView
                            android1:id="@+id/instructionTextView"
                            android1:layout_width="match_parent"
                            android1:layout_height="wrap_content"
                            android1:text="Instruction" />

                        <TableLayout
                            android1:layout_width="wrap_content"
                            android1:layout_height="wrap_content" >

                            <TableRow
                                android1:id="@+id/tableRow1"
                                android1:layout_width="wrap_content"
                                android1:layout_height="wrap_content" >

                                <TextView
                                    android1:id="@+id/savingsTextView"
                                    android1:layout_width="wrap_content"
                                    android1:layout_height="wrap_content"
                                    android1:text="Savings (per Year)" />

                                <EditText
                                    android1:id="@+id/savingsEditText"
                                    android1:layout_width="wrap_content"
                                    android1:layout_height="wrap_content"
                                    android1:ems="10" >

                                    <requestFocus />
                                </EditText>
                            </TableRow>

                            <TableRow
                                android1:id="@+id/tableRow4"
                                android1:layout_width="wrap_content"
                                android1:layout_height="wrap_content" >

                                <TextView
                                    android1:id="@+id/intervalTextView"
                                    android1:layout_width="wrap_content"
                                    android1:layout_height="wrap_content"
                                    android1:text="Interval" />

                                <Spinner
                                    android1:id="@+id/intervalSpin"
                                    android1:layout_width="match_parent"
                                    android1:layout_height="wrap_content" />
                            </TableRow>

                            <TableRow
                                android1:id="@+id/tableRow2"
                                android1:layout_width="wrap_content"
                                android1:layout_height="wrap_content" >

                                <TextView
                                    android1:id="@+id/avgDailyHoursSunTextView"
                                    android1:layout_width="wrap_content"
                                    android1:layout_height="wrap_content"
                                    android1:text="AvgDailyHoursSun" />

                                <EditText
                                    android1:id="@+id/avgDailyHoursSunEditText"
                                    android1:layout_width="wrap_content"
                                    android1:layout_height="wrap_content"
                                    android1:editable="false"
                                    android1:ems="10"
                                    android1:text="4.5" />
                            </TableRow>

                            <TableRow
                                android1:id="@+id/tableRow3"
                                android1:layout_width="wrap_content"
                                android1:layout_height="wrap_content" >

                                <TextView
                                    android1:id="@+id/dayTimeHourlyUsageTextView"
                                    android1:layout_width="wrap_content"
                                    android1:layout_height="wrap_content"
                                    android1:text="dayTimeHourlyUsage" />

                                <EditText
                                    android1:id="@+id/dayTimeHourlyUsageEditText"
                                    android1:layout_width="wrap_content"
                                    android1:layout_height="wrap_content"
                                    android1:editable="false"
                                    android1:ems="10"
                                    android1:text="1" />
                            </TableRow>

                            <TableRow
                                android1:id="@+id/tableRow4"
                                android1:layout_width="wrap_content"
                                android1:layout_height="wrap_content" >

                                <TextView
                                    android1:id="@+id/tariffTextView"
                                    android1:layout_width="wrap_content"
                                    android1:layout_height="wrap_content"
                                    android1:text="Tariff" />

                                <EditText
                                    android1:id="@+id/tariffEditText"
                                    android1:layout_width="wrap_content"
                                    android1:layout_height="wrap_content"
                                    android1:editable="false"
                                    android1:ems="10"
                                    android1:text="0.1941" />
                            </TableRow>

                            <TableRow
                                android1:id="@+id/TableRow01"
                                android1:layout_width="wrap_content"
                                android1:layout_height="wrap_content" >

                                <TextView
                                    android1:id="@+id/feedInFeeTextView"
                                    android1:layout_width="wrap_content"
                                    android1:layout_height="wrap_content"
                                    android1:text="FeedInFee" />

                                <EditText
                                    android1:id="@+id/feedInFeeEditText"
                                    android1:layout_width="wrap_content"
                                    android1:layout_height="wrap_content"
                                    android1:editable="false"
                                    android1:ems="10"
                                    android1:text="0.05" />
                            </TableRow>
                        </TableLayout>

                        <Button
                            android1:id="@+id/calculatorCheckBtn"
                            android1:layout_width="match_parent"
                            android1:layout_height="wrap_content"
                            android1:text="Check" />

                        <TextView
                            android1:id="@+id/calculatorReulstTextView"
                            android1:layout_width="match_parent"
                            android1:layout_height="102dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android1:id="@+id/tab2"
                    android1:layout_width="match_parent"
                    android1:layout_height="match_parent" >

                    <TextView
                        android1:id="@+id/textView1"
                        android1:layout_width="wrap_content"
                        android1:layout_height="wrap_content"
                        android1:text="TextView" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</RelativeLayout>
