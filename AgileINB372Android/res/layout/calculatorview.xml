<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="23dp"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/savingsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Savings (per Year)" />

                <EditText
                    android:id="@+id/savingsEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/avgDailyHoursSunTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AvgDailyHoursSun" />

                <EditText
                    android:id="@+id/avgDailyHoursSunEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:ems="10"
                    android:text="4.5" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/dayTimeHourlyUsageTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dayTimeHourlyUsage" />

                <EditText
                    android:id="@+id/dayTimeHourlyUsageEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:ems="10"
                    android:text="1" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tariffTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tariff" />

                <EditText
                    android:id="@+id/tariffEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:ems="10"
                    android:text="0.1941" />
            </TableRow>

            <TableRow
                android:id="@+id/TableRow01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/feedInFeeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FeedInFee" />

                <EditText
                    android:id="@+id/feedInFeeEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:ems="10"
                    android:text="0.05" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/calculatorCheckBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check" />

    </LinearLayout>

    <TextView
        android:id="@+id/calculatorReulstTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        />

</RelativeLayout>
